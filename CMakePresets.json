{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Ninja_build",
      "displayName": "Ninja build",
      "description": "Ninja build using vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "E:/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ]
        }
      },
      "cmakeExecutable": "E:\\vcpkg\\downloads\\tools\\cmake-3.21.1-windows\\cmake-3.21.1-windows-i386\\bin\\cmake.exe"
    },
    {
      "name": "Ninja_release",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "RUN_fixup": {
          "type": "BOOL",
          "value": "ON"
        },
        "RUN_COPY": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Ninja_debug",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "RUN_fixup": {
          "type": "BOOL",
          "value": "OFF"
        },
        "RUN_COPY": {
          "type": "BOOL",
          "value": "OFF"
        },
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "Ninja_debug",
      "jobs": 10
    },
    {
      "name": "debug_doodle",
      "inherits": "debug",
      "targets": "DoodleExe"
    },
    {
      "name": "debug_doodle_server",
      "inherits": "debug",
      "targets": "doodleServerExe"
    },
    {
      "name": "release",
      "configurePreset": "Ninja_release",
      "jobs": 10
    },
    {
      "name": "cpack_doodle",
      "inherits": "release",
      "targets": "cpack_Doodle"
    }
  ],
  "testPresets": [
    {
      "name": "develop",
      "configurePreset": "Ninja_debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "filter": {
        "include": {
          "name": "pinyi"
        }
      }
    }
  ],
  "vendor": {}
}
