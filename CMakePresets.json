{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Ninja_build",
      "displayName": "Ninja build",
      "description": "Ninja build using vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/install",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "E:/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ],
          "disableExternalAnalysis": true
        }
      },
      "cmakeExecutable": "C:\\Program Files\\CMake\\bin\\cmake.exe",
      "hidden": true
    },
    {
      "name": "Ninja_release",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Ninja_release_plug",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "Ninja_debug",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "Ninja_debug",
      "jobs": 10,
      "hidden": true
    },
    {
      "name": "debug_doodle",
      "description": "调试 exe",
      "displayName": "调试 doodle exe",
      "inherits": "debug",
      "targets": "DoodleExe"
    },
    {
      "name": "debug_test",
      "description": "调试 test",
      "displayName": "调试 doodle test",
      "inherits": "debug",
      "targets": "doodle_test"
    },
    {
      "name": "debug_maya_plug",
      "description": "调试 maya 插件",
      "displayName": "调试 doodle maya",
      "inherits": "debug",
      "targets": "Doodle_maya_plug"
    },
    {
      "name": "doxy",
      "description": "生成文档",
      "displayName": "文档",
      "inherits": "debug",
      "targets": "Doxygen"
    },
    {
      "name": "list_file",
      "description": "列出lib文件",
      "displayName": "列出文件",
      "inherits": "debug",
      "targets": "create_list_doodle_cmake"
    },
    {
      "name": "release",
      "configurePreset": "Ninja_release",
      "jobs": 10
    },
    {
      "name": "release_plug",
      "configurePreset": "Ninja_release_plug",
      "jobs": 10
    },
    {
      "name": "cpack_doodle",
      "description": "使用cpack打包",
      "displayName": "打包",
      "inherits": "release",
      "targets": "cpack_Doodle"
    },
    {
      "name": "doodle_maya_plug",
      "description": "maya插件只能使用release调试",
      "displayName": "debug maya plug",
      "inherits": "release_plug",
      "targets": "Doodle_maya_plug"
    }
  ],
  "testPresets": [
    {
      "name": "develop",
      "configurePreset": "Ninja_debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "filter": {
        "include": {
          "name": "pinyi"
        }
      }
    }
  ],
  "vendor": {}
}