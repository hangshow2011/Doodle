{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Ninja_build",
      "displayName": "Ninja build",
      "description": "Ninja build using vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/install",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ],
          "disableExternalAnalysis": true
        }
      },
      "cmakeExecutable": "C:/Program Files/CMake/bin/cmake.exe",
      "hidden": true
    },
    {
      "name": "doodle_maya",
      "inherits": "Ninja_build",
      "displayName": "config maya plug",
      "description": "构建maya插件 默认版本是2019",
      "cacheVariables": {
        "Maya_Version": "2018",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "vs2022",
      "inherits": "Ninja_build",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "Ninja_release",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Ue4_ROOT_DIR": "D:/Program Files/Epic Games/UE_4.27"
      }
    },
    {
      "name": "Ninja_debug",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "Ue4_ROOT_DIR": "D:/Program Files/Epic Games/UE_4.27"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "Ninja_debug",
      "jobs": 10,
      "hidden": true
    },
    {
      "name": "debug_doodle",
      "description": "调试 exe",
      "displayName": "调试 doodle exe",
      "inherits": "debug",
      "targets": [
        "DoodleExe"
      ]
    },
    {
      "name": "doxygen",
      "description": "doc",
      "displayName": "生成日志",
      "configurePreset": "Ninja_release",
      "targets": [
        "Doxygen"
      ]
    },
    {
      "name": "debug_maya_plug",
      "description": "调试 maya 插件(maya插件只能使用release调试)",
      "displayName": "调试 doodle maya",
      "configurePreset": "doodle_maya",
      "inherits": "debug",
      "targets": [
        "doodle_maya"
      ]
    },
    {
      "name": "release_exe",
      "configurePreset": "Ninja_release",
      "jobs": 10,
      "targets": [
        "DoodleExe",
        "generate_token_run"
      ]
    },
    {
      "name": "cmake_pack",
      "configurePreset": "Ninja_release",
      "jobs": 10,
      "targets": [
        "gen_light_file"
      ]
    }
  ],
  "testPresets": [
    {
      "name": "develop",
      "configurePreset": "Ninja_debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "filter": {
        "include": {
          "name": "pinyi"
        }
      }
    },
    {
      "name": "test_bvh",
      "description": "测试bvh",
      "displayName": "bvh",
      "configurePreset": "Ninja_debug",
      "output": {
        "outputOnFailure": true
      },
      "filter": {
        "include": {
          "name": "bvh"
        }
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "vendor": {}
}