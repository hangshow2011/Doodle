{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 20,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Ninja_build",
      "displayName": "Ninja build",
      "description": "Ninja build using vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/install",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "vendor": {
        "microsoft.com/VisualStudioSettings/CMake/1.0": {
          "hostOS": [
            "Windows"
          ],
          "disableExternalAnalysis": true
        }
      },
      "cmakeExecutable": "C:/Program Files/CMake/bin/cmake.exe",
      "hidden": true
    },
    {
      "name": "maya_2018",
      "inherits": "Ninja_build",
      "displayName": "maya 2018",
      "description": "构建maya 2018插件",
      "cacheVariables": {
        "Maya_Version": "2018",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "maya_2019",
      "inherits": "Ninja_build",
      "displayName": "maya 2019",
      "description": "构建maya 2019插件",
      "cacheVariables": {
        "Maya_Version": "2019",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "maya_2020",
      "inherits": "Ninja_build",
      "displayName": "maya 2020",
      "description": "构建maya 2020插件",
      "cacheVariables": {
        "Maya_Version": "2020",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "vs2022",
      "inherits": "Ninja_build",
      "generator": "Visual Studio 17 2022"
    },
    {
      "name": "Ninja_release",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "Ue4_ROOT_DIR": "D:/Program Files/Epic Games/UE_4.27"
      }
    },
    {
      "name": "Ninja_release_maya_2018",
      "inherits": "maya_2018",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Ninja_release_maya_2019",
      "inherits": "maya_2019",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Ninja_release_maya_2020",
      "inherits": "maya_2020",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Ninja_debug",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "Ue4_ROOT_DIR": "D:/Program Files/Epic Games/UE_4.27"
      }
    },
    {
      "name": "ue4_release_27",
      "inherits": "Ninja_build",
      "displayName": "ue4.27",
      "description": "ue4.27插件",
      "cacheVariables": {
        "Ue4_ROOT_DIR": "D:/Program Files/Epic Games/UE_4.27",
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "Ninja_debug",
      "jobs": 10,
      "hidden": true
    },
    {
      "name": "debug_doodle",
      "description": "调试 exe",
      "displayName": "调试 doodle exe",
      "inherits": "debug",
      "targets": [
        "DoodleExe",
        "Doxygen"
      ]
    },
    {
      "name": "debug_maya2019_plug",
      "description": "调试 maya 2019 插件(maya插件只能使用release调试)",
      "displayName": "调试 doodle 2019 maya",
      "configurePreset": "maya_2019",
      "inherits": "debug",
      "targets": "doodle_maya_2019"
    },
    {
      "name": "release_exe",
      "configurePreset": "Ninja_release",
      "jobs": 10,
      "targets": [
        "DoodleExe",
        "Doxygen"
      ]
    },
    {
      "name": "doxygen",
      "configurePreset": "Ninja_release",
      "jobs": 10,
      "targets": [
        "Doxygen"
      ]
    },
    {
      "name": "release_maya_plug_2018",
      "configurePreset": "Ninja_release_maya_2018",
      "jobs": 10,
      "targets": "doodle_maya_2018"
    },
    {
      "name": "release_maya_plug_2019",
      "configurePreset": "Ninja_release_maya_2019",
      "jobs": 10,
      "targets": "doodle_maya_2019"
    },
    {
      "name": "release_maya_plug_2020",
      "configurePreset": "Ninja_release_maya_2020",
      "jobs": 10,
      "targets": "doodle_maya_2020"
    }
  ],
  "testPresets": [
    {
      "name": "develop",
      "configurePreset": "Ninja_debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      },
      "filter": {
        "include": {
          "name": "pinyi"
        }
      }
    }
  ],
  "vendor": {}
}
