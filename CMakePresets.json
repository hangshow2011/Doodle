{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "Ninja_build",
      "displayName": "Ninja build",
      "description": "Ninja build using vcpkg",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "F:/vcpkg/scripts/buildsystems/vcpkg.cmake",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "architecture": {
        "value": "x64",
        "strategy": "external"
      }
    },
    {
      "name": "Ninja_build_copy",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "RUN_fixup": {
          "type": "BOOL",
          "value": "ON"
        },
        "RUN_COPY": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "Ninja_build_nocopy",
      "inherits": "Ninja_build",
      "cacheVariables": {
        "RUN_fixup": {
          "type": "BOOL",
          "value": "OFF"
        },
        "RUN_COPY": {
          "type": "BOOL",
          "value": "OFF"
        },
        "CMAKE_BUILD_TYPE": "Debug"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "configurePreset": "Ninja_build_nocopy"
    },
    {
      "name": "release",
      "configurePreset": "Ninja_build_copy"
    }
  ],
  "testPresets": [
    {
      "name": "develop",
      "configurePreset": "Ninja_build_nocopy",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true
      }
    }
  ],
  "vendor": {}
}