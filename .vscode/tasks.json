{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake config",
      "type": "shell",
      "command": "${workspaceFolder}/src/cmd_debug/config_cmake.cmd",
      "args": []
    },
    {
      "label": "cmake build",
      "type": "shell",
      "command": "${workspaceFolder}/src/cmd_debug/build_debug_venv.cmd",
      "args": [
        "${input:build_target}"
      ],
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "arg_input",
      "type": "promptString",
      "description": "input arg",
      "default": "test create metadata"
    },
    {
      "id": "build_target",
      "type": "pickString",
      "description": "要构建的目标",
      "options": [
        "DoodleExe",
        "doodle_core",
        "bvh_test"
      ]
    }
  ]
}