{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake config",
      "type": "shell",
      "command": "${workspaceFolder}/src/cmd_debug/config_cmake.cmd",
      "args": [],
      "problemMatcher": []
    },
    {
      "label": "cmake build",
      "type": "shell",
      "command": "${workspaceFolder}/src/cmd_debug/build_debug_venv.cmd",
      "args": [
        "${input:build_target}"
      ],
      "problemMatcher": []
    },
    {
      "label": "cmake test",
      "type": "shell",
      "command": "${workspaceFolder}/build/Ninja_build_DD/bin/${input:build_target}.exe",
      "args": [
        "--logger=HRF,all",
        "--color_output=true",
        "--run_test=${input:build_target}"
      ],
      "problemMatcher": [],
      "dependsOn": [
        "cmake build"
      ]
    }
  ],
  "inputs": [
    {
      "id": "arg_input",
      "type": "promptString",
      "description": "input arg",
      "default": "dingding_base/client_get_user_attendance"
    },
    {
      "id": "build_target",
      "type": "pickString",
      "description": "要构建的目标",
      "options": [
        "DoodleExe",
        "doodle_core",
        "bvh_test",
        "dingding_base"
      ]
    }
  ]
}