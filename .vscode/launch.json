{
    "version": "0.2.0",
    "setupCommands": [
        {
            "description": "Enable utf-8",
            "text": "set charset UTF-8"
        }
    ],
    "configurations": [
        {
            "name": "maya",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2019/bin/maya.exe",
            "args": [
                "-noAutoloadPlugins"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/maya_2019/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "maya (Windows) 附加",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "Doodle_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Ninja_build_DD/bin/${input:debug_target}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/build/Ninja_build_DD/bin",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "debug_test",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Ninja_build_DD/bin/bvh_test.exe",
            "args": [
                "--logger=HRF,all",
                "--color_output=true"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/Ninja_build_DD/bin",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Doodle_debug_command",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "${input:arg_input}"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        }
    ],
    "inputs": [
        {
            "id": "arg_input",
            "type": "promptString",
            "description": "input arg",
            "default": ""
        },
        {
            "id": "debug_target",
            "type": "pickString",
            "description": "要调试的目标",
            "options": [
                "DoodleExe",
                "doodle_core",
                "bvh_test"
            ],
            "default": "DoodleExe"
        }
    ],
    "compounds": [
        {
            "name": "Doodle_sercer/client",
            "configurations": [
                "Doodle_debug"
            ]
        }
    ]
}