{
    "configurations": [
        {
            "name": "maya_launch",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "maya",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2020/bin/maya.exe",
            "args": [
                "-noAutoloadPlugins"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MAYA_PLUG_IN_PATH",
                    "value": "${workspaceFolder}/build/Ninja_release_plug/bin"
                },
                {
                    "name": "PATH",
                    "value": "${env:PATH};${workspaceFolder}/build/Ninja_release_plug/bin"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Python maya debug",
            "type": "python",
            "request": "launch",
            "python": "C:\\Program Files\\Autodesk\\Maya2019\\bin\\mayapy.exe",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Doodle_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Doodle_server_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "server_config.json"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        }
    ],
    "compounds": [
        {
            "name": "Doodle_sercer/client",
            "configurations": [
                "Doodle_server_debug",
                "Doodle_debug"
            ]
        }
    ]
}