{
    "version": "0.2.0",
    "setupCommands": [
        {
            "description": "Enable utf-8",
            "text": "set charset UTF-8"
        }
    ],
    "configurations": [
        {
            "name": "maya",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2019/bin/maya.exe",
            "args": [
                "-noAutoloadPlugins"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/maya_2019/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "maya_cmd",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2019/bin/maya.exe",
            "args": [
                "-noAutoloadPlugins",
                "-batch",
                "-script",
                "${workspaceFolder}/src/doodle_exe/main/test/test_maya.py"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Doodle_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [
                {
                    "name": "MAYA_MODULE_PATH",
                    "value": "${workspaceFolder}/build/doodle_maya/plug/maya"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Doodle_debug_command",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "${input:arg_input}"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        }
    ],
    "inputs": [
        {
            "id": "arg_input",
            "type": "promptString",
            "description": "input arg",
            "default": ""
        }
    ],
    "compounds": [
        {
            "name": "Doodle_sercer/client",
            "configurations": [
                "Doodle_debug"
            ]
        }
    ]
}