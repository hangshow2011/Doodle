{
    "configurations": [
        {
            "name": "maya",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "C:/Program Files/Autodesk/Maya2020/bin/maya.exe",
            "args": [
                "-noAutoloadPlugins"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "MAYA_PLUG_IN_PATH",
                    "value": "${workspaceFolder}/build/Ninja_release_plug/bin;${workspaceFolder}/script/maya/plug-ins"
                },
                {
                    "name": "PATH",
                    "value": "${env:PATH};${workspaceFolder}/build/Ninja_release_plug/bin"
                },
                {
                    "name": "PYTHONPATH",
                    "value": "${env:PYTHONPATH};${workspaceFolder}/src/doodle_lib/resource;${workspaceFolder}/script/maya/scripts/scripts;${workspaceFolder}/script/maya/scripts"
                },
                {
                    "name": "XBMLANGPATH",
                    "value": "${workspaceFolder}/script/maya/icons"
                }
            ],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Python maya debug",
            "type": "python",
            "request": "launch",
            "python": "C:\\Program Files\\Autodesk\\Maya2019\\bin\\mayapy.exe",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Doodle_debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis"
        },
        {
            "name": "Doodle_debug_command",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [
                "${input:arg_input}"
            ],
            "stopAtEntry": false,
            "cwd": "${command:cmake.getLaunchTargetDirectory}",
            "environment": [],
            "console": "internalConsole",
            "visualizerFile": "${workspaceFolder}/stl.natvis",
            "setupCommands": [
                {
                    "description": "Enable utf-8",
                    "text": "set charset UTF-8"
                }
            ]
        }
    ],
    "inputs": [
        {
            "id": "arg_input",
            "type": "promptString",
            "description": "input arg",
            "default": ""
        }
    ],
    "compounds": [
        {
            "name": "Doodle_sercer/client",
            "configurations": [
                "Doodle_debug"
            ]
        }
    ]
}